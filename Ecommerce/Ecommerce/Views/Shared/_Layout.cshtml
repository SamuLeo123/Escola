<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Ecommerce</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="nav navbar-light fixed-top bg-primary" style="box-shadow: 0 1px 5px rgba(0,0,0,0.25);">
        <ul class="nav mr-auto mt-2 mt-lg-0" id="navId">
            <li class="nav-item">
                <a href="/Cliente/Form" class="nav-link text-light">Cliente</a>
            </li>
            <li class="nav-item">
                <a href="/Funcionario/Form" class="nav-link text-light">Funcionário</a>
            </li>
            <li class="nav-item">
                <a href="/Produto/Form" class="nav-link text-light">Produto</a>
            </li>
            <li class="nav-item mr-sm-2">
                <a href="/Venda/Form" class="nav-link text-light">Venda</a>
            </li>
            <li class="nav-item mr-sm-2">
                <a href="/Home/Relatorio" class="nav-link text-light">Relatório</a>
            </li>
        </ul>
        <div class="dropdown show">
            @try
            {
                if(int.Parse(Session["_Id"].ToString()) != 0)
                {
                    <button type="button" class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@Session["_NomeUser"]</button>
                }
                else
                {
                    Response.Redirect("../Home/Index");
                }
                
            }
            catch (Exception e)
            {
                Response.Redirect("../Home/Index");
            }
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item" href="#">Id: @Session["_Id"]</a>
                <a class="dropdown-item">User: @Session["_User"]</a>
                <div class="dropdown-divider"></div>
                    <form action="../Home/Logout"><input type="submit" class="btn btn-danger" value="Sair"/></form>
                
            </div>

        </div>


    </nav>

    @RenderBody()
    @*<script src="~/Scripts/jquery-3.0.0.slim.min.js"></script>
        <script src="~/Scripts/popper.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>*@
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Form</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body class="bg-light">

    <div class="container">
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Cadastro do Funcioário</h4>
            <form class="needs-validation" novalidate="" method="post" action="/Funcionario/Cadastrar">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="firstName">Primeiro nome</label>
                        <input type="text" class="form-control" id="firstName" placeholder="Nome" value="@ViewBag.Func.Nome" required="" name="funcionario.Nome">
                        <div class="invalid-feedback">
                            Não pode ser nulo.
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="lastName">Sobrenome</label>
                        <input type="text" class="form-control" id="lastName" placeholder="Sobrenome" value="@ViewBag.Sobre" required="" name="sobre">
                        <div class="invalid-feedback">
                            Não pode ser nulo.
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="address">Endereço</label>
                    <input type="text" class="form-control" id="address" placeholder="Av. Exemplo, 100" required="" value="@ViewBag.Func.Endereco"" name="funcionario.Endereco">
                    <div class="invalid-feedback">
                        Digite um endereço válido.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="exemplo@email.com" value="@ViewBag.Func.Email" name="funcionario.Email">
                    <div class="invalid-feedback">
                        Digite um E-mail válido.
                    </div>
                </div>

                <div class="row">
                    <div class=" col-md-6 mb-3">
                        <label for="Login">Login</label>
                        <input type="text" class="form-control" id="address" required="" placeholder="Login" value="@ViewBag.Func.Login" name="funcionario.Login">
                        <div class="invalid-feedback">
                            Digite um Login válida.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="senha">Senha</label>
                        <input type="password" class="form-control" id="address" required="" placeholder="Senha" value="@ViewBag.Func.Senha" name="funcionario.Senha">
                        <div class="invalid-feedback">
                            Digite uma senha válida.
                        </div>
                    </div>


                    <div class="col-md-6 mb-3">
                        <label for="cc-name">Número de telefone</label>
                        <input type="text" class="form-control" id="cc-name" placeholder="Telefone" value="@ViewBag.Func.NumTel" required="" name="funcionario.NumTel">
                        <small class="text-muted">(DDD) 00000-0000</small>
                        <div class="invalid-feedback">
                            Digite um número válido.
                        </div>
                    </div>
                </div>
                <hr class="mb-4">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Cadastrar</button>
            </form>
        </div>
    </div>

    <center>
        <div class="@ViewBag.Class" style="width: 80%" role="alert">
            @Html.ValidationMessage("Funcionario.Nome")<br />
            @Html.ValidationMessage("Funcionario.Login")<br />
            @Html.ValidationMessage("Funcionario.Senha")<br />
            @Html.ValidationMessage("Funcionario.Endereco")<br />
            @Html.ValidationMessage("Funcionario.NumTel")<br />
            @Html.ValidationMessage("Funcionario.Email")<br />
        </div>
    </center>

    <br /><br />
    <center>
        <form action="/Funcionario/Listar">
            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Listar Funcionários" />
        </form>
    </center>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <script>
            (function() { 'use strict';
                window.addEventListener('load', function() {
                    var forms = document.getElementsByClassName('needs-validation');
                    var validation = Array.prototype.filter.call(forms, function(form) {
                        form.addEventListener('submit', function(event) {
                            if (form.checkValidity() === false) {
                                event.preventDefault();
                                event.stopPropagation();
                            }
                            form.classList.add('was-validated');
                        }, false);
                        });
                }, false);
            })();
    </script>
</body>
</html>
